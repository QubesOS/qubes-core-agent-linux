set -e -o pipefail

copy() {
    /usr/lib/qubes/qrexec-client-vm @default \
        qubes.Filecopy /usr/lib/qubes/qfile-agent "$@"
}

progress_kdialog() {
    local pos ref

    (while read -r pos; do
        if [[ $pos == 0 ]]; then
            # shellcheck disable=SC2207
            ref=( $(kdialog --progressbar "$DESCRIPTION") )
            trap 'qdbus "${ref[@]}" close' EXIT  # for this subshell
            qdbus "${ref[@]}" Set "" maximum "$SIZE"
        fi

        qdbus "${ref[@]}" Set "" value "$pos"
    done) >/dev/null  # hide qdbus's empty output lines
}

progress_zenity() {
    local pos fd

    (while read -r pos; do
        if [[ $pos == 0 ]]; then
            trap 'kill -- $!' EXIT  # for this subshell
            exec {fd}> >(exec zenity --progress --text="$DESCRIPTION")
        fi

        echo $((100 * pos / SIZE)) >&$fd
    done)
}


find_paths=( )
for path; do
    case "$path" in
        (-*) find_paths+=( ./"$path" ) ;;
        (*)  find_paths+=(   "$path" ) ;;
    esac
done

SIZE=$(
    find "${find_paths[@]}" -type f -print0 2>/dev/null |
    du --files0-from - -c --apparent-size -b |
    tail -n 1 |
    cut -f 1 |
    grep -xE '[0-9]+'
) || SIZE=0

if [[ ${0##*/} == qvm-move-to-vm.* ]]; then
    DESCRIPTION="Moving files..."
    trap '[[ $? == 0 ]] && rm -rf -- "$@"' EXIT
else
    DESCRIPTION="Copying files..."
fi

if [[ $SIZE == 0 ]]; then
    PROGRESS_TYPE=none copy "$@"
elif [[ $0 == *.kde ]] && type kdialog qdbus >/dev/null; then
    PROGRESS_TYPE=gui  copy "$@" | progress_kdialog
elif type zenity >/dev/null; then
    PROGRESS_TYPE=gui  copy "$@" | progress_zenity
else
    PROGRESS_TYPE=none copy "$@"
fi
